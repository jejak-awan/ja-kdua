{
    "name": "Janari",
    "slug": "janari",
    "version": "V.1.0",
    "type": "frontend",
    "description": "Janari Theme - A modern, elegant theme for JA-CMS",
    "author": "Jejakawan",
    "settings_schema": {
        "site_title": {
            "label": "Site Title",
            "type": "text",
            "default": "JA-CMS",
            "category": "General"
        },
        "brand_logo": {
            "label": "Logo",
            "type": "media",
            "category": "General"
        },
        "brand_favicon": {
            "label": "Favicon",
            "type": "media",
            "category": "General"
        },
        "branding_display": {
            "label": "Branding Display",
            "type": "select",
            "options": [
                {
                    "label": "Logo only",
                    "value": "logo_only"
                },
                {
                    "label": "Site name only",
                    "value": "text_only"
                },
                {
                    "label": "Logo + Site name",
                    "value": "both"
                }
            ],
            "default": "logo_only",
            "category": "General"
        },
        "color_primary": {
            "label": "Primary Color",
            "type": "color",
            "default": "#4f46e5",
            "category": "Colors"
        },
        "color_background": {
            "label": "Background Color",
            "type": "color",
            "default": "#f9fafb",
            "category": "Colors"
        },
        "font_heading": {
            "label": "Heading Font",
            "type": "select",
            "options": [
                {
                    "label": "Inter",
                    "value": "Inter"
                },
                {
                    "label": "Roboto",
                    "value": "Roboto"
                },
                {
                    "label": "Poppins",
                    "value": "Poppins"
                },
                {
                    "label": "Merriweather",
                    "value": "Merriweather"
                }
            ],
            "default": "Inter",
            "category": "Typography"
        },
        "breadcrumb_sticky": {
            "label": "Sticky Breadcrumbs",
            "type": "checkbox",
            "default": false,
            "category": "Layout",
            "description": "Keep breadcrumbs visible while scrolling"
        },
        "header_sticky": {
            "label": "Sticky Header",
            "type": "checkbox",
            "default": true,
            "category": "Layout"
        },
        "layout_style": {
            "label": "Layout Style",
            "type": "select",
            "options": [
                {
                    "label": "Full Width (Default)",
                    "value": "full"
                },
                {
                    "label": "Boxed (Content in Box)",
                    "value": "boxed"
                },
                {
                    "label": "Wide (Wider Box)",
                    "value": "wide"
                },
                {
                    "label": "Framed (Floating Box)",
                    "value": "framed"
                },
                {
                    "label": "Hybrid (Header/Footer Full)",
                    "value": "hybrid"
                }
            ],
            "default": "full",
            "category": "Layout",
            "description": "Choose overall page layout style"
        },
        "container_max_width": {
            "label": "Container Max Width",
            "type": "range",
            "min": 1200,
            "max": 1920,
            "step": 40,
            "default": 1400,
            "category": "Layout",
            "description": "Max width in pixels (for Boxed/Wide/Framed)"
        },
        "boxed_bg_color": {
            "label": "Page Background Color",
            "type": "color",
            "default": "#f1f5f9",
            "category": "Layout",
            "description": "Background visible outside boxed content"
        },
        "boxed_shadow": {
            "label": "Boxed Content Shadow",
            "type": "select",
            "options": [
                {
                    "label": "None",
                    "value": "none"
                },
                {
                    "label": "Subtle",
                    "value": "sm"
                },
                {
                    "label": "Medium",
                    "value": "md"
                },
                {
                    "label": "Large",
                    "value": "lg"
                },
                {
                    "label": "Extra Large",
                    "value": "xl"
                }
            ],
            "default": "lg",
            "category": "Layout"
        },
        "framed_padding": {
            "label": "Frame Padding",
            "type": "range",
            "min": 8,
            "max": 48,
            "step": 4,
            "default": 16,
            "category": "Layout",
            "description": "Padding around framed layout (px)"
        },
        "header_style": {
            "label": "Header Style",
            "type": "select",
            "options": [
                {
                    "label": "Glassmorphism",
                    "value": "glass"
                },
                {
                    "label": "Solid White",
                    "value": "solid"
                },
                {
                    "label": "Transparent",
                    "value": "transparent"
                }
            ],
            "default": "glass",
            "category": "Layout"
        },
        "header_cta_text": {
            "label": "Header CTA Button Text",
            "type": "text",
            "default": "Get Started",
            "category": "Layout"
        },
        "header_cta_url": {
            "label": "Header CTA Button URL",
            "type": "text",
            "default": "/register",
            "category": "Layout"
        },
        "nav_style": {
            "label": "Navigation Style",
            "type": "select",
            "options": [
                {
                    "label": "‚ú® Glass Morph (Blur + Transparency)",
                    "value": "glass"
                },
                {
                    "label": "üéØ Spotlight (Focus Highlight)",
                    "value": "spotlight"
                },
                {
                    "label": "üß≤ Magnetic (Hover Attraction)",
                    "value": "magnetic"
                },
                {
                    "label": "üí´ Floating (3D Shadow)",
                    "value": "floating"
                },
                {
                    "label": "üåä Slide (Text Reveal)",
                    "value": "slide"
                },
                {
                    "label": "üíä Pill Modern (Soft Fill)",
                    "value": "pill"
                },
                {
                    "label": "üìè Underline Grow (Expand)",
                    "value": "underline"
                },
                {
                    "label": "üî• Neon Glow (Cyberpunk)",
                    "value": "glow"
                }
            ],
            "default": "glass",
            "category": "Layout"
        },
        "hero_title": {
            "label": "Hero Title",
            "type": "text",
            "default": "JA-CMS",
            "category": "Hero Section"
        },
        "hero_subtitle": {
            "label": "Hero Subtitle",
            "type": "textarea",
            "default": "Modern Content Management System",
            "category": "Hero Section"
        },
        "hero_bg": {
            "label": "Hero Background Gradient",
            "type": "select",
            "options": [
                {
                    "label": "Blue Purple",
                    "value": "bg-gradient-to-r from-blue-600 to-indigo-700"
                },
                {
                    "label": "Midnight",
                    "value": "bg-gradient-to-r from-gray-900 to-black"
                },
                {
                    "label": "Sunset",
                    "value": "bg-gradient-to-r from-orange-500 to-pink-500"
                }
            ],
            "default": "bg-gradient-to-r from-blue-600 to-indigo-700",
            "category": "Hero Section"
        },
        "footer_text": {
            "label": "Copyright Text",
            "type": "text",
            "default": "¬© 2025 JA-CMS. All rights reserved.",
            "category": "Footer"
        },
        "social_twitter": {
            "label": "Twitter URL",
            "type": "url",
            "category": "Social Media"
        },
        "social_github": {
            "label": "GitHub URL",
            "type": "url",
            "category": "Social Media"
        }
    },
    "menus": {
        "header": "Header Main",
        "header_top": "Header Top",
        "footer": "Footer Main",
        "footer_col_1": "Footer Column 1",
        "footer_col_2": "Footer Column 2",
        "sidebar": "Sidebar"
    }
}